{
    "name": "webpajooh/telebot",
    "description": "A minimal library to develop your new Telegram bot",
    "keywords": ["telegram", "telegram bot", "telegram bot api", "telegram sdk", "telegram php"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "WebPajooh",
            "email": "webpajooh@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "autoload": {
        "psr-4": {
            "TeleBot\\": "src/"
        },
        "files": ["src/helpers.php"]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": [
            "php vendor/phpunit/phpunit/phpunit"
        ]
    }
}
